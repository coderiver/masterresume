extend _skeleton-is-inner

block title
	title Выбери режим работы(тип занятости)

block header
	header.header
		.l-center
			.header__wrap
				.header__in
					a(href="#").logo.onleft
						| Твое<span>Резюме</span>

block content
	.content.is-inner
		.l-wide
			.paper
				i.rect-ico
				i.rect-ico-2
				.slide
					.l-center
						.slide-title
							i.clip-ico
							h1.h1: span Выбери режим работы
						.slide__in
							.regime
								h4.h2
									| <i class="icon-hourglass"></i><span>Тип занятости</span>
								.regime__item
									a(href="#").regime__el Полная занятость
									a(href="#").regime__el Стажировка
									a(href="#").regime__el Частичная занятость
									a(href="#").regime__el Проектная/Временная работа
									a(href="#").regime__el.active Волонтерство
								.books-bg
								.books-bg.left
						a(href="#").slide-nav-prev
							.slide-nav-in
								i.triangle-ico
								i.icon-angle-left
								span Назад
							i.line-ico
						a(href="#").slide-nav-next
							.slide-nav-in
								i.triangle-ico
								span Далее
								i.icon-angle-right
							i.line-ico

